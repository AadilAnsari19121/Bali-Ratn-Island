<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:background="@color/whole_app_background"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whole_app_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rcv_design_menu_id"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:fontFamily="@font/font_style"
                android:gravity="left"
                android:inputType="text"
                android:padding="@dimen/_3sdp"
                android:text="988"
                android:textColor="@color/textcolorforapp"
                android:textSize="@dimen/_25ssp" />
            <TextView
                android:id="@+id/rcv_design_menu_name"
                android:layout_width="@dimen/_330sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:fontFamily="@font/font_style"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:padding="@dimen/_3sdp"
                android:text="cheese dry manchurain"
                android:textColor="@color/textcolorforapp"
                android:textSize="@dimen/_25ssp" />


            <TextView
                android:id="@+id/rcv_design_menu_price"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:fontFamily="@font/font_style"
                android:gravity="left"
                android:inputType="text"
                android:padding="@dimen/_3sdp"
                android:text="9999"
                android:textColor="@color/textcolorforapp"
                android:textSize="@dimen/_25ssp"/>
            <TextView
                android:id="@+id/tvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-3dp"
                android:fontFamily="@font/font_style"
                android:gravity="left"
                android:inputType="text"
                android:text="â‚¹"
                android:textColor="@color/textcolorforapp"
                android:textSize="@dimen/_25ssp" />


            <TextView
                android:id="@+id/rcv_design_menu_cat"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:fontFamily="@font/font_style"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:padding="@dimen/_3sdp"
                android:text="North Indian Cusine "
                android:textColor="@color/textcolorforapp"
                android:textSize="@dimen/_25ssp" />

            <ImageButton
                android:id="@+id/menu_bt_menu"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_baseline_more_vert_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.987"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.507" />

        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_below="@+id/face_emp_rcv"
        android:layout_width="match_parent"
        android:layout_marginTop="-4dp"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/headerdark"
        />
</LinearLayout>


</androidx.cardview.widget.CardView>