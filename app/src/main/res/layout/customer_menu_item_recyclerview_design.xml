<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:background="@color/whole_app_background"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whole_app_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customer_rcv_design_menu_name"
                android:layout_width="@dimen/_330sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:fontFamily="@font/font_style"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:padding="@dimen/_3sdp"
                android:text="cheese dry manchurain"
                android:textColor="@color/textcolorforapp"
                android:textSize="@dimen/_25ssp" />


            <TextView
                android:id="@+id/customer_rcv_design_menu_price"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:fontFamily="@font/font_style"
                android:gravity="left"
                android:inputType="text"
                android:padding="@dimen/_3sdp"
                android:text="9999"
                android:textColor="@color/textcolorforapp"
                android:textSize="@dimen/_25ssp" />

            <TextView
                android:id="@+id/tvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-3dp"
                android:fontFamily="@font/font_style"
                android:gravity="left"
                android:inputType="text"
                android:text="â‚¹"
                android:textColor="@color/textcolorforapp"
                android:textSize="@dimen/_25ssp" />

            <TextView
                android:id="@+id/customer_rcv_design_menu_cat"
                android:layout_width="@dimen/_280sdp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:fontFamily="@font/font_style"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:padding="@dimen/_3sdp"
                android:text="North Indian Cusine "
                android:textColor="@color/textcolorforapp"
                android:textSize="@dimen/_25ssp" />




        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_below="@+id/face_emp_rcv"
        android:layout_width="match_parent"
        android:layout_marginTop="-4dp"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/headerdark"
        />
</LinearLayout>


</androidx.cardview.widget.CardView>