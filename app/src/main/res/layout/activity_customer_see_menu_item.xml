<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whole_app_background"
    tools:context=".customer_see_menu_item">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customer_menu_item_rcv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="83dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

    <Button
        android:id="@+id/customer_btn_cart"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="@dimen/_35sdp"
        android:paddingTop="@dimen/_1sdp"
        android:paddingRight="@dimen/_25sdp"
        android:paddingBottom="@dimen/_1sdp"
        android:text="view cart"
        android:textColor="@color/white"
        android:textSize="@dimen/_17ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customer_menu_item_rcv"
        android:drawableRight="@drawable/ic_baseline_shopping_cart_24"
        android:drawableTint="@color/white"
        android:drawablePadding="-35dp"
        android:layout_width="match_parent"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85sdp"
        android:layout_marginBottom="13dp"
        android:layout_weight="1.0"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/customer_menu_item_rcv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView

            android:id="@+id/cat_name_in_rcv"
            android:layout_width="0dip"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="0.5"
            android:background="@drawable/rcv_textview_design"
            android:fontFamily="@font/font_style"
            android:gravity="center"
            android:inputType="text"
            android:paddingStart="@dimen/_15sdp"
            android:paddingRight="@dimen/_25sdp"
            android:text="hello"
            android:textAlignment="textStart"
            android:textColor="@color/textcolorforapp"
            android:textSize="@dimen/_15sdp"
            tools:ignore="RtlCompat" />


        <TextView
            android:clickable="false"
            android:id="@+id/search_in_rcv"
            android:layout_width="0dip"
            android:layout_height="@dimen/_49sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="0.5"
            android:background="@drawable/rcv_textview_design"
            android:drawablePadding="@dimen/_3sdp"
            android:drawableTint="@color/textcolorforapp"
            android:fontFamily="@font/font_style"
            android:gravity="center_vertical"
            android:inputType="text"
            android:paddingLeft="@dimen/_50sdp"
            android:textAlignment="viewStart"
            android:textColor="@color/textcolorforapp"
            android:textColorHint="@color/textcolorforapp"
            android:textSize="@dimen/_15ssp"
            tools:ignore="RtlCompat" />


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="23dp"
        app:civ_border_width="@dimen/_3ssp"
        app:civ_border_color="@color/textcolorforapp"
        android:src="@drawable/person_logo"
        app:layout_constraintBottom_toTopOf="@+id/customer_menu_item_rcv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23000002" />


</androidx.constraintlayout.widget.ConstraintLayout>