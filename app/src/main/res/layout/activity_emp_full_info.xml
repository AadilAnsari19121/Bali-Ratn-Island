                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/person_logo"
                    app:civ_border_width="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:id="@+id/emp_full_info_face"
                    app:civ_border_color="@color/white"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/emp_full_info_face"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="st_man_001"
                        android:fontFamily="@font/font_style"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/textcolorforapp"
                        android:padding="@dimen/_3sdp"
