<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    android:elevation="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp"
    android:background="@color/whole_app_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lnlout">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >



                <TextView
                    android:id="@+id/chef_disp_order_list_cr_time"
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:fontFamily="@font/font_style"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/_3sdp"
                    android:text="13:10:31 PM"
                    android:textColor="@color/textcolorforapp"
                    android:textSize="@dimen/_25ssp" />

                <TextView
                    android:id="@+id/chef_disp_order_list_tb_num"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/font_style"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/_3sdp"
                    android:text="04"
                    android:textColor="@color/textcolorforapp"
                    android:textSize="@dimen/_25ssp" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>