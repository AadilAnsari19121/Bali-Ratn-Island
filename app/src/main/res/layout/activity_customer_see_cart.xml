<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer_see_cart"
    android:background="@color/whole_app_background"
    android:orientation="vertical"
    android:id="@+id/llllllout">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rccccv"
                android:layout_width="match_parent"
                android:layout_height="570dp"
                android:layout_margin="@dimen/_3sdp"
                android:backgroundTint="@color/white"
                android:background="@android:color/transparent"
                android:padding="@dimen/_5sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv2_see_cart"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:background="@android:color/transparent"
                android:padding="0dp" />

            <TextView
                android:id="@+id/total_cart_bill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: 00"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_20ssp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/font_style"
                android:textColor="@color/textcolorforapp"/>

            <Button
                android:drawableRight="@drawable/ic_baseline_fastfood_24"
                android:drawableTint="@color/white"
                android:drawablePadding="-35dp"
                android:id="@+id/order_items_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_35sdp"
                android:text="order the cart items"
                android:layout_marginRight="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"/>





        </LinearLayout>
    </ScrollView>



</LinearLayout>