<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer_feedback"
    android:orientation="vertical"
    android:background="@color/whole_app_background">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FEEDBACK TO OUR SERVICES"
                android:fontFamily="@font/font_style"
                android:textSize="@dimen/_25ssp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="15dp"
                android:background="@color/headerdark"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ctmr_feedback_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Name"
                app:startIconDrawable="@drawable/ic_baseline_person_24"
                app:startIconTint="@color/textcolorforapp"
                app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                app:boxStrokeColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/textcolorforapp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ctmr_feedback_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Phone Number"
                app:startIconDrawable="@drawable/ic_baseline_phone_24"
                app:startIconTint="@color/textcolorforapp"
                app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                app:boxStrokeColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_15sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="@color/textcolorforapp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ctmr_feedback_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Email Address"
                app:startIconDrawable="@drawable/ic_baseline_email_24"
                app:startIconTint="@color/textcolorforapp"
                app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                app:boxStrokeColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_15sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/textcolorforapp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Our Food"
                android:textColor="@color/textcolorforapp"
                android:fontFamily="@font/font_style"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_35sdp"
                android:textSize="@dimen/_25ssp"/>

            <RatingBar
                android:id="@+id/food_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:progressTint="@color/header"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"/>


            <TextView
                android:id="@+id/food_raring_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textcolorforapp"
                android:fontFamily="@font/font_style"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_0sdp"
                android:textSize="@dimen/_20ssp"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Our Services"
                android:textColor="@color/textcolorforapp"
                android:fontFamily="@font/font_style"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_35sdp"
                android:textSize="@dimen/_25ssp"/>

            <RatingBar
                android:id="@+id/service_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:progressTint="@color/header"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"/>


            <TextView
                android:id="@+id/ser_raring_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textcolorforapp"
                android:fontFamily="@font/font_style"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_0sdp"
                android:textSize="@dimen/_20ssp"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Have You Enjoy Meal ?"
                android:textColor="@color/textcolorforapp"
                android:fontFamily="@font/font_style"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_35sdp"
                android:textSize="@dimen/_25ssp"/>

           <RadioGroup
               android:id="@+id/rdgrp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:gravity="center"
               android:orientation="horizontal"
               >
               <RadioButton
                   android:id="@+id/yes_rdb"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="yes"
                   android:layout_marginRight="@dimen/_5sdp"
                   android:buttonTint="@color/header"
                   android:fontFamily="@font/font_style"
                   android:textColor="@color/textcolorforapp"
                   android:textAlignment="center"
                   android:checked="true"
                   android:layout_gravity="center"
                   android:gravity="center"/>

               <RadioButton
                   android:id="@+id/no_rdb"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="No"
                   android:layout_marginLeft="@dimen/_5sdp"
                   android:buttonTint="@color/header"
                   android:fontFamily="@font/font_style"
                   android:textColor="@color/textcolorforapp"
                   android:textAlignment="center"
                   android:layout_gravity="center"
                   android:gravity="center"/>
           </RadioGroup>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ctmr_feedback_long_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message"
                app:startIconDrawable="@drawable/ic_baseline_edit_24"
                app:startIconTint="@color/textcolorforapp"
                app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                app:boxStrokeColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textColor="@color/textcolorforapp"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/ctmr_feedback_done_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_55sdp"
                android:layout_marginBottom="@dimen/_55sdp"
                android:background="@drawable/btn_design_home"
                />





        </LinearLayout>
    </ScrollView>

</LinearLayout>