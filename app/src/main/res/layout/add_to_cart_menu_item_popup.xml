<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whole_app_background"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="name item"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:id="@+id/popup_menu_name"
                android:textAlignment="center"
                android:textSize="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_70sdp"
                android:fontFamily="@font/font_style"
                android:textColor="@color/textcolorforapp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="price"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:id="@+id/popup_menu_price"
                android:textAlignment="center"
                android:textSize="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/font_style"
                android:textColor="@color/textcolorforapp"
                />


            <EditText
                android:inputType="number"
                android:id="@+id/popup_menu_qun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:hint="Enter The Quantity"
                android:layout_gravity="center"
                android:textColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:gravity="center"
                android:fontFamily="@font/font_style"
                android:backgroundTint="@color/textcolorforapp"/>

            <Button
                android:drawableRight="@drawable/ic_baseline_add_shopping_cart_24"
                android:drawableTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_45sdp"
                android:layout_marginRight="@dimen/_45sdp"
                android:text="add to cart menu item"
                android:id="@+id/popup_menu_cart_btn"
                android:layout_marginBottom="@dimen/_150sdp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>