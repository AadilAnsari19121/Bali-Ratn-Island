<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    android:elevation="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:background="@color/whole_app_background">

    <TableLayout
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView

                android:id="@+id/total_sell_des_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:56:33 Am"
                android:inputType="text"
                android:layout_column="1"
                android:fontFamily="@font/font_style"
                android:textColor="@color/textcolorforapp"
                android:textSize="@dimen/_20ssp"
                android:layout_marginLeft="@dimen/_1sdp"/>



            <TextView
                android:id="@+id/total_sell_des_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_column="2"
                android:inputType="text"
                android:layout_marginRight="@dimen/_1sdp"
                android:fontFamily="@font/font_style"
                android:gravity="end"
                android:text="11:56:33 Am"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/textcolorforapp"
                android:textSize="@dimen/_20ssp" />


        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_column="1"
                android:id="@+id/total_sell_des_tbnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:56:33 Am"
                android:fontFamily="@font/font_style"
                android:textColor="@color/textcolorforapp"
                android:textSize="@dimen/_20ssp"
                android:layout_marginLeft="@dimen/_1sdp"/>

            <TextView
                android:id="@+id/total_sell_des_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/_1sdp"
                android:fontFamily="@font/font_style"
                android:gravity="end"
                android:text="11:56:33 Am"
                android:layout_column="2"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/textcolorforapp"
                android:textSize="@dimen/_20ssp" />



        </TableRow>
    </TableLayout>

