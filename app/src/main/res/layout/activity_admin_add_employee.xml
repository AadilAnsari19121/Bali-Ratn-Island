<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_add_employee"
    android:orientation="vertical"
    android:background="@color/whole_app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_15sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:background="@color/header"
                        android:layout_marginTop="-50dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/_0sdp"
                        />



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:src="@drawable/person_logo"
                        app:civ_border_width="@dimen/_3sdp"
                        android:layout_gravity="center"
                        android:id="@+id/employee_img_add"
                        app:civ_border_color="@color/white"
                        android:layout_marginTop="-100dp"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        app:startIconDrawable="@drawable/ic_baseline_person_24"
                        app:startIconTint="@color/textcolorforapp"
                        app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                        app:boxStrokeColor="@color/textcolorforapp"
                        android:textColorHint="@color/textcolorforapp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/textcolorforapp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

<!--                    ************************************************************-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        app:startIconDrawable="@drawable/ic_baseline_person_24"
                        app:startIconTint="@color/textcolorforapp"
                        app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                        app:boxStrokeColor="@color/textcolorforapp"
                        android:textColorHint="@color/textcolorforapp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/textcolorforapp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

<!--                    ************************************************************-->
                    <TextView
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Gander :"
                        android:textColor="@color/textcolorforapp"
                        android:fontFamily="@font/font_style"
                        android:textSize="@dimen/_18ssp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginRight="@dimen/_25sdp"/>
                    <RadioGroup
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/radio_grp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <RadioButton
                            android:id="@+id/radio_btn_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:checked="true"
                            android:buttonTint="@color/textcolorforapp"
                            android:textColor="@color/textcolorforapp"
                            android:drawableLeft="@drawable/ic_baseline_male_24"
                            android:drawablePadding="@dimen/_15sdp"
                            android:text="Male"
                            android:textSize="@dimen/_20ssp" />
                        <RadioButton
                            android:buttonTint="@color/textcolorforapp"
                            android:id="@+id/radio_btn_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/textcolorforapp"
                            android:drawableTint="@color/textcolorforapp"
                            android:drawablePadding="@dimen/_15sdp"
                            android:drawableStart="@drawable/ic_baseline_female_24"
                            android:layout_weight="1"
                            android:textSize="@dimen/_20ssp"
                            android:text="Female"/>
                    </RadioGroup>

<!--                    ************************************************************-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/age"
                        android:layout_height="wrap_content"
                        android:hint="Age"
                        app:startIconDrawable="@drawable/ic_baseline_calendar_month_24"
                        app:startIconTint="@color/textcolorforapp"
                        app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                        app:boxStrokeColor="@color/textcolorforapp"
                        android:textColorHint="@color/textcolorforapp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/textcolorforapp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

<!--                    ************************************************************-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone Number"
                        android:id="@+id/phone_number"
                        app:startIconDrawable="@drawable/ic_baseline_phone_24"
                        app:startIconTint="@color/textcolorforapp"
                        app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                        app:boxStrokeColor="@color/textcolorforapp"
                        android:textColorHint="@color/textcolorforapp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:textColor="@color/textcolorforapp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

<!--                    ************************************************************-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email Address"
                        android:id="@+id/email_address"
                        app:startIconDrawable="@drawable/ic_baseline_email_24"
                        app:startIconTint="@color/textcolorforapp"
                        app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                        app:boxStrokeColor="@color/textcolorforapp"
                        android:textColorHint="@color/textcolorforapp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/textcolorforapp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>


<!--                    ************************************************************-->

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_baseline_person_24"
                        app:startIconTint="@color/textcolorforapp"
                        app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                        app:boxStrokeColor="@color/textcolorforapp"
                        android:textColorHint="@color/textcolorforapp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        app:endIconTint="@color/textcolorforapp"
                        android:id="@+id/position_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:inputType="none"
                            android:textColor="@color/textcolorforapp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Select Position"
                            android:id="@+id/staff_postition"/>
                    </com.google.android.material.textfield.TextInputLayout>


<!--                    ************************************************************-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Staff Id"
                        android:id="@+id/staff_id"
                        app:startIconDrawable="@drawable/ic_baseline_emp_id_24"
                        app:startIconTint="@color/textcolorforapp"
                        app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                        app:boxStrokeColor="@color/textcolorforapp"
                        android:textColorHint="@color/textcolorforapp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/textcolorforapp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

<!--                    ************************************************************-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        android:id="@+id/home_address"
                        app:startIconDrawable="@drawable/ic_baseline_location_on_24"
                        app:startIconTint="@color/textcolorforapp"
                        app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                        app:boxStrokeColor="@color/textcolorforapp"
                        android:textColorHint="@color/textcolorforapp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:textColor="@color/textcolorforapp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

<!--                    ************************************************************-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pin code"
                        android:id="@+id/pin_code"
                        app:startIconDrawable="@drawable/ic_baseline_location_city_24"
                        app:startIconTint="@color/textcolorforapp"
                        app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                        app:boxStrokeColor="@color/textcolorforapp"
                        android:textColorHint="@color/textcolorforapp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/textcolorforapp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

<!--                    ************************************************************-->

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_baseline_my_location_24"
                        app:startIconTint="@color/textcolorforapp"
                        app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                        app:boxStrokeColor="@color/textcolorforapp"
                        android:textColorHint="@color/textcolorforapp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"

                        android:layout_marginTop="@dimen/_35sdp"
                        app:endIconTint="@color/textcolorforapp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:inputType="none"
                            android:textColor="@color/textcolorforapp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Select state"
                            android:id="@+id/state_dropdown"/>
                    </com.google.android.material.textfield.TextInputLayout>


<!--                    ************************************************************-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Edu. Qualification"

                        android:id="@+id/edu_qualification"
                        app:startIconDrawable="@drawable/ic_baseline_edu_24"
                        app:startIconTint="@color/textcolorforapp"
                        app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                        app:boxStrokeColor="@color/textcolorforapp"
                        android:textColorHint="@color/textcolorforapp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/textcolorforapp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

<!--******************************************************************************************************-->

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Create Password"
                        android:id="@+id/create_password"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/textcolorforapp"
                        app:startIconDrawable="@drawable/ic_baseline_lock_24"
                        app:startIconTint="@color/textcolorforapp"
                        app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                        app:boxStrokeColor="@color/textcolorforapp"
                        android:textColorHint="@color/textcolorforapp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="@color/textcolorforapp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

<!--***************************************************************************************************************-->


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirm Password"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/textcolorforapp"
                        android:id="@+id/confirm_password"
                        app:startIconDrawable="@drawable/ic_baseline_lock_24"
                        app:startIconTint="@color/textcolorforapp"
                        app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                        app:boxStrokeColor="@color/textcolorforapp"
                        android:textColorHint="@color/textcolorforapp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="@color/textcolorforapp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

<!--                    ****************************************************************************-->

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_65sdp"
                        android:layout_marginLeft="@dimen/_45sdp"
                        android:layout_marginRight="@dimen/_45sdp"
                        android:text="register"
                        android:id="@+id/sign_up"
                        android:layout_marginBottom="@dimen/_150sdp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>