<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


    <TextView
        android:text="EDIT"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="@dimen/_30ssp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/textcolorforapp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_50sdp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_65sdp"
                    android:inputType="text"
                    android:text="st_man_001"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/edit_st_info_st_id"
                    android:textAlignment="center"
                    android:textSize="@dimen/_30ssp"
                    android:fontFamily="@font/font_style"
                    android:textColor="@color/textcolorforapp"
                    />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:src="@drawable/person_logo"
        app:civ_border_width="@dimen/_2sdp"
        app:civ_border_color="@color/headerdark"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:padding="2dp"
        android:id="@+id/edit_st_info_face"/>


<!--            ********************************************-->

    <EditText
        android:id="@+id/edit_st_info_img_url"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:hint="change the image url"
        android:textColorHint="@color/textcolorforapp"
        android:textStyle="italic"
        android:inputType="textMultiLine"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/textcolorforapp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingLeft="@dimen/_2sdp"
        android:paddingRight="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        />



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_st_info_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                app:startIconDrawable="@drawable/ic_baseline_person_24"
                app:startIconTint="@color/textcolorforapp"
                app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                app:boxStrokeColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/textcolorforapp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <!--                    ************************************************************-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_st_info_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                app:startIconDrawable="@drawable/ic_baseline_person_24"
                app:startIconTint="@color/textcolorforapp"
                app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                app:boxStrokeColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/textcolorforapp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <!--                    ************************************************************-->

            <!--                    ************************************************************-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/edit_st_info_age"
                android:layout_height="wrap_content"
                android:hint="Age"
                app:startIconDrawable="@drawable/ic_baseline_calendar_month_24"
                app:startIconTint="@color/textcolorforapp"
                app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                app:boxStrokeColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/textcolorforapp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <!--                    ************************************************************-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:id="@+id/edit_st_info_phone_number"
                app:startIconDrawable="@drawable/ic_baseline_phone_24"
                app:startIconTint="@color/textcolorforapp"
                app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                app:boxStrokeColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="@color/textcolorforapp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <!--                    ************************************************************-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:id="@+id/edit_st_info_email_address"
                app:startIconDrawable="@drawable/ic_baseline_email_24"
                app:startIconTint="@color/textcolorforapp"
                app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                app:boxStrokeColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/textcolorforapp"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <!--                    ************************************************************-->




            <!--                    ************************************************************-->


            <!--                    ************************************************************-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:id="@+id/edit_st_info_home_address"
                app:startIconDrawable="@drawable/ic_baseline_location_on_24"
                app:startIconTint="@color/textcolorforapp"
                app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                app:boxStrokeColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textColor="@color/textcolorforapp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <!--                    ************************************************************-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pin code"
                android:id="@+id/edit_st_info_pin_code"
                app:startIconDrawable="@drawable/ic_baseline_location_city_24"
                app:startIconTint="@color/textcolorforapp"
                app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                app:boxStrokeColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/textcolorforapp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <!--                    ************************************************************-->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="state"
                android:id="@+id/edit_st_info_state"
                app:startIconDrawable="@drawable/ic_baseline_my_location_24"
                app:startIconTint="@color/textcolorforapp"
                app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                app:boxStrokeColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/textcolorforapp"
                    />
            </com.google.android.material.textfield.TextInputLayout>



            <!--                    ************************************************************-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edu. Qualification"

                android:id="@+id/edit_st_info_edu_qualification"
                app:startIconDrawable="@drawable/ic_baseline_edu_24"
                app:startIconTint="@color/textcolorforapp"
                app:boxCornerRadiusTopEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomStart="@dimen/_15sdp"
                app:boxStrokeColor="@color/textcolorforapp"
                android:textColorHint="@color/textcolorforapp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/textcolorforapp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <!--******************************************************************************************************-->


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_55sdp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:text="update"
                android:fontFamily="@font/font_style"
                android:textSize="@dimen/_20ssp"
                android:background="@color/header"
                android:id="@+id/edit_empl_btn"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_55sdp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>