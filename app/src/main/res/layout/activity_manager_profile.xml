                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:id="@+id/man_full_info_poz"
                        tools:ignore="RtlCompat" />
                </LinearLayout>


                </RelativeLayout>

