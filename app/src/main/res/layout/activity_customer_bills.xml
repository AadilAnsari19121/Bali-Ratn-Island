<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer_bills"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whole_app_background"
        >

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:paddingBottom="@dimen/_150sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/ctmr_bills_table_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Table 14"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/textcolorforapp"
                    android:fontFamily="@font/font_style"
                    android:textSize="@dimen/_25ssp"
                    android:padding="@dimen/_3sdp"
                    />

                <TextView
                    android:id="@+id/ctmr_bills_time"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="11:55:13 AM"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:textColor="@color/textcolorforapp"
                    android:fontFamily="@font/font_style"
                    android:textSize="@dimen/_25ssp"
                    android:padding="@dimen/_3sdp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:orientation="horizontal"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="@dimen/_5sdp"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/textcolorforapp"
                    android:fontFamily="@font/font_style"
                    android:textSize="@dimen/_25ssp"
                    android:padding="@dimen/_3sdp"
                    />

                <TextView
                    android:id="@+id/ctmr_bills_date"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="31 12 2023"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:textColor="@color/textcolorforapp"
                    android:fontFamily="@font/font_style"
                    android:textSize="@dimen/_25ssp"
                    android:padding="@dimen/_3sdp"
                    />
            </LinearLayout>

            <TextView
                android:background="@color/headerdark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/font_style"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:text="Your order list"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_25sdp" />


            <ListView
                android:id="@+id/ctmr_bills_listview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_400sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_0sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:background="@android:color/transparent"
                android:divider="@color/textcolorforapp"
                android:dividerHeight="@dimen/_1sdp"
                android:padding="@dimen/_5sdp" />

            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="2dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:background="@color/textcolorforapp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Sub Total"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/textcolorforapp"
                    android:fontFamily="@font/font_style"
                    android:textSize="@dimen/_20ssp"
                    android:padding="@dimen/_3sdp"
                    />

                <TextView
                    android:id="@+id/ctmr_bills_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="@font/font_style"
                    android:gravity="right"
                    android:inputType="text"
                    android:padding="@dimen/_5sdp"
                    android:text="00.00"
                    android:textColor="@color/textcolorforapp"
                    android:textSize="@dimen/_20sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:orientation="horizontal"
                android:layout_marginTop="-5dp"
                >

                <TextView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Service charge 1.5%"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/font_style"
                    android:textSize="@dimen/_13sdp"
                    android:padding="@dimen/_3sdp"
                    />

                <TextView
                    android:id="@+id/ctmr_bills_service_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:fontFamily="@font/font_style"
                    android:gravity="right"
                    android:inputType="text"
                    android:padding="@dimen/_5sdp"
                    android:text="00.00"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:orientation="horizontal"
               android:layout_marginTop="-5dp"
                >

                <TextView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="CGST 9%"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/font_style"
                    android:textSize="@dimen/_13sdp"
                    android:padding="@dimen/_3sdp"
                    />

                <TextView
                    android:id="@+id/ctmr_bills_cgst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:fontFamily="@font/font_style"
                    android:gravity="right"
                    android:inputType="text"
                    android:padding="@dimen/_5sdp"
                    android:text="00.00"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:orientation="horizontal"
                android:layout_marginTop="-5dp"
                >

                <TextView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="SGST 9%"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/font_style"
                    android:textSize="@dimen/_13sdp"
                    android:padding="@dimen/_3sdp"
                    />

                <TextView
                    android:id="@+id/ctmr_bills_sgst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:fontFamily="@font/font_style"
                    android:gravity="right"
                    android:inputType="text"
                    android:padding="@dimen/_5sdp"
                    android:text="00.00"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:orientation="horizontal"
                android:layout_marginTop="-5dp"
                >

                <TextView
                    android:id="@+id/weekday_offer"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="week day offer"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/font_style"
                    android:textSize="@dimen/_13sdp"
                    android:padding="@dimen/_3sdp"
                    />

                <TextView
                    android:id="@+id/ctmr_weekday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:fontFamily="@font/font_style"
                    android:gravity="right"
                    android:inputType="text"
                    android:padding="@dimen/_5sdp"
                    android:text="00.00"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="2dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:background="@color/textcolorforapp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Pay Total"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/textcolorforapp"
                    android:fontFamily="@font/font_style"
                    android:textSize="@dimen/_20ssp"
                    android:padding="@dimen/_3sdp"
                    />

                <TextView
                    android:id="@+id/ctmr_bills_pay_total_amount_this"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="@font/font_style"
                    android:gravity="end"
                    android:inputType="text"
                    android:padding="@dimen/_5sdp"
                    android:text="00.00"
                    android:textColor="@color/textcolorforapp"
                    android:textSize="@dimen/_20sdp" />
            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IF YOU WANT PAY ONLINE HERE THEN CLICK THE BUTTON"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textAlignment="center"
                android:textSize="@dimen/_15ssp"/>

            <Button
                android:id="@+id/pay_online_btn"
                android:drawableEnd="@drawable/ic_baseline_payment_24"
                android:drawableTint="@color/white"
                android:paddingLeft="@dimen/_35sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pay online"
                android:textSize="@dimen/_20ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="@dimen/_55sdp"
                android:layout_marginLeft="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:text="------------------or------------------"
                android:textSize="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_15sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IF YOU WANT PAY CASH OR OTHER TRANSACTION THEN GO TO THE COUNTER
                  [ on counter you also pay online ]"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textAlignment="center"
                android:textSize="@dimen/_15ssp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>