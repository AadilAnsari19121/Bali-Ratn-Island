<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/whole_app_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/applogoiv"
                android:layout_width="801dp"
                android:layout_height="713dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_0sdp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="@dimen/_0sdp"
                android:scaleType="fitXY"
                android:src="@mipmap/logoofrms"

                />

            <TextView
                android:id="@+id/wl_tv"
                android:layout_width="779dp"
                android:layout_height="546dp"
                android:layout_gravity="center"
                android:layout_marginTop="-60dp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:fontFamily="@font/font_style"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:padding="@dimen/_2sdp"
                android:text="There Is No Sincerer Love Than The Love Of Food. Welcome To Our Place."
                android:textColor="#033345"
                android:textSize="@dimen/_50ssp" />

            <ProgressBar
                android:id="@+id/prb"
                style="@android:style/Widget.Holo.ProgressBar.Large"
                android:layout_width="151dp"
                android:layout_height="136dp"
                android:layout_gravity="center"
                android:layout_marginTop="-5sp"
                android:backgroundTint="@color/white"
                android:indeterminateTint="@color/white"
                android:rotation="-1"
                android:rotationX="-1"
                android:scaleX="-1" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>